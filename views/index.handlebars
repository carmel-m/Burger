{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

     * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container">

  <h1>Veggie Burgers!</h1>

  <div class="row">
    <h2>Put in an order for your favorite vegetarian burger.</h2>
    <br>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger name:</label>
        <input type="text" id="burger-name" name="name">
      </div>
      <button type="submit" id="order-burger">Order burger</button>
    </form>
  </div>

  <div class="row">

    <div class="col-sm-6">
      <h2>Burgers that have not been eaten</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Burgers that have been eaten</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  

  </div>
</div>